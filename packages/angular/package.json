{
  "name": "@tokiforge/angular",
  "version": "0.2.0",
  "description": "Angular adapter for TokiForge theming",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@angular/core": ">=17.0.0 <20.0.0",
    "@angular/common": ">=17.0.0 <20.0.0",
    "@tokiforge/core": "^0.2.0"
  },
  "devDependencies": {
    "@angular/core": "^19.0.0",
    "@angular/common": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tokiforge/core": "^0.2.0"
  },
  "keywords": [
    "angular",
    "theming",
    "design-tokens",
    "ssr"
  ],
  "author": "TokiForge Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TokiForge/tokiforge.git"
  },
  "homepage": "https://github.com/TokiForge/tokiforge#readme",
  "bugs": {
    "url": "https://github.com/TokiForge/tokiforge/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}


{
  "name": "@tokiforge/angular",
  "version": "1.1.2",
  "description": "Angular adapter for TokiForge theming",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:all": "npm run build",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "test": "echo 'Angular tests require full Angular testing infrastructure. See packages/angular/src/theme.service.test.ts for test examples.'",
    "test:watch": "echo 'Angular tests require full Angular testing infrastructure.'",
    "test:ui": "echo 'Angular tests require full Angular testing infrastructure.'"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@angular/common": ">=17.0.0 <22.0.0",
    "@angular/core": ">=17.0.0 <22.0.0",
    "@tokiforge/core": "^1.1.2"
  },
  "devDependencies": {
    "@angular/common": "^21.0.0-rc.0",
    "@angular/core": "^21.0.0-rc.0",
    "@swc/core": "^1.15.0",
    "sharp": "^0.34.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tokiforge/core": "^1.1.2"
  },
  "keywords": [
    "angular",
    "theming",
    "design-tokens",
    "ssr"
  ],
  "author": "TokiForge Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TokiForge/tokiforge.git"
  },
  "homepage": "https://github.com/TokiForge/tokiforge#readme",
  "bugs": {
    "url": "https://github.com/TokiForge/tokiforge/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}

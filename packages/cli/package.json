{
  "name": "tokiforge-cli",
  "version": "0.2.0",
  "description": "CLI tool for TokiForge design tokens",
  "bin": {
    "tokiforge": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cli",
    "design-tokens",
    "theme-engine",
    "theming",
    "token-parser",
    "token-export",
    "developer-tools",
    "design-tools"
  ],
  "author": "TokiForge Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TokiForge/tokiforge.git"
  },
  "homepage": "https://github.com/TokiForge/tokiforge#readme",
  "bugs": {
    "url": "https://github.com/TokiForge/tokiforge/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@tokiforge/core": "^0.2.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}

